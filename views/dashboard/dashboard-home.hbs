<div class="container">
    <h1>Dashboard</h1>
    {{#if hasErrors}}
        <div class="alert alert-danger">
            {{#each messages}}
                <p>{{ this}}</p>
            {{/each}}
        </div> 
    {{/if}}
    <a href="/challenge/create-challenge">Create Challenge</a>
    <div class="challenge-list">
        {{#each challenges}}
            <div class="row">
                {{#each this}}
                    <div class="col-sm-6 col-md-4"> 
                        <h3><a href="/challenge/{{this.id}}">{{this.name}}</a></h3>
                        <p>{{this.description}}</p>
                        <a href="/challenge/delete-challenge/{{this.id}}">Delete Challenge</a>
                        <a href="/challenge/remove-from-challenge/{{../userId}}/{{this.id}}">Quit Challenge</a>
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>
</div>

